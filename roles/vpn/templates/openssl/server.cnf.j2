# server.cnf
# This configuration file is used by the 'req' command when the server certificate is created.
[ req ]
default_bits            = 2048
default_md              = sha2
encrypt_key             = no
prompt                  = no
string_mask             = utf8only
distinguished_name      = server_distinguished_name
req_extensions          = req_cert_extensions
# attributes              = req_attributes

[ server_distinguished_name ]
countryName             = DE
#stateOrProvinceName    = BW
localityName            = Albstadt
organizationName        = HSAS-CTF
#organizationalUnitName  = My Department Name
commonName              = server.{{ team }}.vpn.ctf.hs-albsig.de
emailAddress            = hostmaster@localhost

[ req_cert_extensions ]
nsCertType              = server
subjectAltName          = email:hostmaster@localhost
